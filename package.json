{
  "name": "graphql-ts-server-boilerplate",
  "version": "0.0.1",
  "description": "Awesome project developed with TypeORM.",
  "type": "commonjs",
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/ioredis": "^4.28.10",
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0.23",
    "@types/uuid": "^8.3.4",
    "@types/yup": "^0.29.13",
    "eslint": "^8.12.0",
    "gql2ts": "^1.10.1",
    "ts-jest": "^27.1.4",
    "ts-node": "10.7.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "4.6.3"
  },
  "dependencies": {
    "@graphql-tools/merge": "^8.2.6",
    "@graphql-tools/schema": "^8.3.6",
    "@paulxuca/graphql-yoga": "^1.1.4",
    "apollo-server": "^3.6.7",
    "apollo-server-express": "^3.6.7",
    "bcryptjs": "^2.4.3",
    "express": "^4.17.3",
    "graphql": "^16.3.0",
    "graphql-import": "^1.0.2",
    "graphql-request": "^4.2.0",
    "graphql-tools": "^8.2.4",
    "graphql-yoga": "^2.0.0",
    "ioredis": "^4.28.5",
    "nodemon": "^2.0.15",
    "pg": "^8.7.3",
    "reflect-metadata": "^0.1.13",
    "typeorm": "0.3.5",
    "uuid": "^8.3.2",
    "yup": "^0.32.11"
  },
  "scripts": {
    "start": "SET NODE_ENV=development & nodemon --exec ts-node --files src/index.ts",
    "test": "SET NODE_ENV=test & jest --forceExit",
    "gen-schema-types": "gql2ts src/schema.graphql -o src/types/schema.d.ts",
    "typeorm": "typeorm-ts-node-commonjs"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
